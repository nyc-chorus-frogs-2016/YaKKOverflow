<%= form_for :response do |f| %>
  <%= f.hidden_field :responsable_type, :value => parent.class.name %>
  <%= f.hidden_field :responsable_id, :value => parent.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.submit 'Post Your Response', class: 'button'%>
<% end %>
