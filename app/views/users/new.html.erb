<%= form_for @user do |f| %>

  Register for YaKK Overflow!

<table>
    <tr>
      <td>
      <%= f.label :name%>
      </td>
      <td>
      <%= f.text_field :name %>
      </td>
    </tr>

    <tr>
      <td>
      <%= f.label :uid, "Username"%>
      </td>
      <td>
      <%= f.text_field :uid %>
      </td>
    </tr>

    <tr>
      <td>
      <%= f.label :password %>
      </td>
      <td>
      <%= f.password_field :password %>
      </td>
    </tr>

    <tr>
      <td>
      <%= f.label :password_confirmation %>
      </td>
      <td>
      <%= f.password_field :password_confirmation %>
      </td>
    </tr>

    <tr>
      <td>
      <%= f.hidden_field :provider, value: "yakkoverflow" %>
    </td>
    <td>
    <%= f.submit %>
    </td>
    </tr>


<% end %>
</table>

<% if @user.errors.any? %>
  <div class="error_report">
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  </div>
<% end %>
