<!DOCTYPE html>
<html>
<head>
  <title>YakOverflow</title>
   <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>


  <%= link_to image_tag("http://s15.postimg.org/x5ej5aem3/logo.jpg", :border => 0, :alt => '', :title => ''), root_path, :class => 'logo' %>


</head>
<body>

  <% if current_user %>
      Welcome <%= current_user.username %> |
       <%= link_to 'Log out', session_path, method: :delete %> | <%= link_to 'Home', questions_path %>
  <% else %>
    <ul>
      <li><%= link_to 'sign up', register_path %></li>
      <li><%= link_to 'log in', login_path %></li>
      <li><%= link_to 'home', questions_path %></li>
   </ul>
   <% end %>



<% if flash.any?  %>
  <div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "flash-#{name}" %>
    <% end %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
